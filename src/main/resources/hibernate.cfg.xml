<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
		<session-factory>
			<property name="connection.driver_class">org.postgresql.Driver</property>
			<property name="connection.url">jdbc:postgresql://localhost:5432/hibernateDB</property>
			<property name="connection.username">postgres</property>
			<property name="connection.password">root</property>
<!--	<property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>-->
			<property name="hbm2ddl.auto">update</property>
			<property name="show_sql">true</property>
			<property name="format_sql">true</property>
			<property name="cache.use_second_level_cache">true</property>
			<property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property> <!--cache class-->
			
			<mapping class="com.practice.hibernate.entity.Student" />
			<mapping class="com.practice.hibernate.entity.Address" />
			<mapping class="com.practice.hibernate.entity.Question" />
			<mapping class="com.practice.hibernate.entity.Answer" />
			<mapping class="com.practice.hibernate.entity.Employee" />
			<mapping class="com.practice.hibernate.entity.Account" />
			<mapping class="com.practice.hibernate.entity.Geek" />
			<mapping class="com.practice.hibernate.entity.Project" />
			<mapping class="com.practice.hibernate.entity.Restaurant" />
			<mapping class="com.practice.hibernate.entity.Food" />
			<mapping class="com.practice.hibernate.entity.Country" />
			<mapping class="com.practice.hibernate.entity.City" />
			<mapping class="com.practice.hibernate.entity.Teacher" />

			
		</session-factory>
</hibernate-configuration>